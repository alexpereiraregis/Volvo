@using Volvo.MVC.Response
@model TruckResponse

@{ Layout = null; }



<form asp-controller="Home" asp-action="Edit" asp-route-returnurl="@ViewData[" ReturnUrl"]" method="post">
    <input asp-for=Id type="hidden">

    <div class="form-group">
        <label>Modelo</label>
        <select asp-for=Model asp-items="ViewBag.truckModel" class="form-control"></select>

    </div>
    <div class="form-group">
        <label>Ano de fabricação</label>
        <input asp-for=YearManufacture class="form-control" />
    </div>
    <div class="form-group">
        <label>Ano modelo</label>
        <select asp-for=ModelYear asp-items="ViewBag.truckModelYear" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
</form>